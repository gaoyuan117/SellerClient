<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#e1e1e1"
              android:orientation="vertical">

    <include layout="@layout/title_project"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white">

                <GridView
                    android:id="@+id/ChenYuanGrid"
                    android:layout_width="match_parent"
                    android:layout_height="220dp"
                    android:background="@android:color/white"
                    android:columnWidth="52dp"
                    android:gravity="start"
                    android:horizontalSpacing="6dp"
                    android:listSelector="@android:color/transparent"
                    android:numColumns="4"
                    android:verticalSpacing="10dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="#dadada"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/allChenYuan"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/btn_list_item_bg"
                android:visibility="gone">

                <TextView
                    android:id="@+id/allChenYuanText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|left"
                    android:paddingLeft="20dip"
                    android:text="全部群成员(0)"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/arrow_right"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:layout_alignParentBottom="true"
                    android:background="#dadada"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="16dp" android:background="#E6E6E6"
                android:visibility="gone"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/BangPaiNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip"
                    android:background="@drawable/btn_list_item_bg">

                    <TextView
                        android:id="@+id/tv_temp_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="群聊名称"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="32dp"
                        android:layout_toRightOf="@id/tv_temp_name"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="XXX"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/arrow_right"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_code"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/btn_list_item_bg"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_temp_erweima"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="群二维码"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="32dp"
                        android:src="@mipmap/a_5"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/arrow_right"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_gonggao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_list_item_bg">

                    <TextView
                        android:id="@+id/noticeTile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:text="群公告"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/noticeContext"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/noticeTile"
                        android:layout_marginBottom="25dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="32dp"
                        android:layout_marginTop="15dp"
                        android:paddingBottom="5dp"
                        android:textColor="#AAAAAA"
                        android:textSize="16sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/arrow_right"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="1dip"
                        android:layout_alignParentBottom="true"
                        android:background="#dadada"/>
                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="16dp"
                android:background="#dadada"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/re_miandarao"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_miandarao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="消息免打扰"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <com.kaichaohulian.baocms.view.SwitchButton
                        android:id="@+id/sb_MianDaRao"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_zhiding"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_zhiding"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="置顶聊天"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"/>

                    <com.kaichaohulian.baocms.view.SwitchButton
                        android:id="@+id/sb_ZhiDing"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>


                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_save_txl"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_save_txl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="保存到通讯录"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <com.kaichaohulian.baocms.view.SwitchButton
                        android:id="@+id/sb_save_txl"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#dadada"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_jinyan"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_jinyan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="禁言成员"
                        android:textColor="#353535"
                        android:textSize="16sp"/>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#dadada"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_zhuanrang"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_zhuangrang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="转让群主"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#dadada"/>
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="16dp"
                android:background="#dadada"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_list_item_bg"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/myNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="50dip">

                    <TextView
                        android:id="@+id/tv_my_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="我在本群的昵称"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_myname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="32dp"
                        android:layout_toRightOf="@id/tv_my_name"
                        android:ellipsize="end"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="暂无"
                        android:textColor="#AAAAAA"
                        android:textSize="14sp"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:src="@mipmap/arrow_right"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0.1dip"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:background="#dadada"/>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/re_show_name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:clickable="true">

                    <TextView
                        android:id="@+id/tv_show_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:text="显示群成员昵称"
                        android:textColor="#353535"
                        android:textSize="16sp"/>

                    <com.kaichaohulian.baocms.view.SwitchButton
                        android:id="@+id/sb_show_name"
                        style="@style/SwitchButtonStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:layout_alignParentBottom="true"
                        android:background="#dadada"/>


                </RelativeLayout>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/re_qinkong"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:layout_marginTop="16dp"
                android:background="@drawable/btn_list_item_bg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="清空聊天记录"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:background="#dadada"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.1dip"
                    android:layout_alignParentBottom="true"
                    android:background="#dadada"/>
            </RelativeLayout>

            <Button
                android:id="@+id/btn_exit_grp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@drawable/btn_style_alert_dialog_special"
                android:onClick="exitGroup"
                android:paddingBottom="7dp"
                android:paddingTop="7dp"
                android:text="删除并退出"
                android:textColor="@android:color/white"
                android:textSize="18sp"/>


        </LinearLayout>
    </ScrollView>

</LinearLayout>