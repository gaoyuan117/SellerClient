<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_300"
        android:background="@color/sent_redbag_background" >

        <TextView
            android:id="@+id/sent_redbag_time"
            android:text="2016å¹´"
            android:layout_marginTop="@dimen/dimens_30"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_20"
            android:textColor="@color/sent_redbag_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/sent_redbag_head"
            android:layout_width="@dimen/dimens_60"
            android:layout_height="@dimen/dimens_60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_60"
            />
        <RelativeLayout
            android:id="@+id/sent_redbag_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sent_redbag_head"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimens_20"
            >
            <TextView

                android:id="@+id/sent_redbag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_sent_gongfachu"
                android:layout_toRightOf="@id/sent_redbag_name"
                android:layout_alignBottom="@id/sent_redbag_name"
                android:textColor="@color/dark"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/sent_redbag_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sent_redbag_linear"
            android:layout_centerHorizontal="true"
            android:text="0.0"
            android:layout_marginTop="@dimen/dimens_10"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_48"
            />
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:layout_below="@+id/sent_redbag_account"
            android:layout_marginTop="@dimen/dimens_30" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sent_bag_text1" />
            <TextView
                android:id="@+id/sent_redbag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textColor="@color/sent_redbag_time"/>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sent_bag_text2"
                />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>