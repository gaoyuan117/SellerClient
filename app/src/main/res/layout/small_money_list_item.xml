<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/smallmoney_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
        android:layout_marginTop="@dimen/dimens_10"
        android:text="@string/red_bag"
        android:textColor="@color/dark"
        android:textSize="@dimen/text_15" />

    <TextView
        android:id="@+id/smallmoney_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/smallmoney_type"
        android:layout_below="@+id/smallmoney_type"
        android:layout_marginBottom="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_4"
        android:text="2016-08-09 10:08:59"
        android:textColor="@color/dim_gray" />

    <TextView
        android:id="@+id/smallmoney_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_20"
        android:textColor="@color/green"
        android:textSize="@dimen/text_15" />


</RelativeLayout>