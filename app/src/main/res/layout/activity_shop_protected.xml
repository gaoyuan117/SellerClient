<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    >
    <include
        layout="@layout/title_project" />
    <RelativeLayout
        android:id="@+id/head_icon_linear"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/shop_head"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <ImageView
            android:id="@+id/personal_head_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            />
        <ImageView
            android:id="@+id/shop_imgHead"
            android:layout_width="@dimen/dimens_64"
            android:layout_height="@dimen/dimens_64"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/personal_head_arrow"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_useravatar" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp" />
    <RelativeLayout
        android:id="@+id/name_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/shop_name_tv"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="大虎火锅"
            android:textColor="@color/tv_text"
            android:layout_toLeftOf="@+id/personal_name_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/personal_name_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />




    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/twocode_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/shop_two_code"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft" />
        <ImageView
            android:id="@+id/im_QrCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/personal_twocode_arrow"
            android:src="@mipmap/me_settings"
            android:layout_marginRight="10dp" />

        <ImageView
            android:id="@+id/personal_twocode_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/address_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/shop_address"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <TextView
            android:id="@+id/shop_address_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="河南 信阳"
            android:textColor="@color/tv_text"
            android:layout_toLeftOf="@+id/address_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/address_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/my_address_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/shop_contactor"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <TextView
            android:id="@+id/contactor_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="张大草"
            android:textColor="@color/tv_text"
            android:layout_toLeftOf="@+id/personal_address_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/personal_address_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />
    <RelativeLayout
        android:id="@+id/time_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/time_business"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <TextView
            android:id="@+id/personal_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="8:00~18:00"
            android:textColor="@color/tv_text"
            android:layout_toLeftOf="@+id/personal_sex_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/personal_sex_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />

    <RelativeLayout
        android:id="@+id/wait_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/waiting_time"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <TextView
            android:id="@+id/wait_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="30分钟"
            android:textColor="@color/tv_text"
            android:layout_toLeftOf="@+id/personal_area_arrow"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />
        <ImageView
            android:id="@+id/personal_area_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="@color/line"
        android:layout_marginLeft="15dp"
        />
    <LinearLayout
        android:id="@+id/personal_sign_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/seltor"
        android:paddingTop="@dimen/dimens_16"
        android:paddingBottom="@dimen/dimens_16"
        android:clickable="true">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/dark"
            android:text="@string/transfer_detail"
            android:textSize="@dimen/text_14"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />
        <TextView
            android:id="@+id/transfer_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:text="1 预约提醒  无需预约，消费高峰时可能需求等位\n2 包间          可免费使用包间\n3 食堂外带  食堂外带均可，可以打包，打包费详情咨询商家\n4 温馨提示  酒水饮料等问题，请致电商家\n5 商家服务  提供免费wifi,免费提供20个车位"

            android:layout_marginTop="@dimen/dimens_10"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            />

    </LinearLayout>
</LinearLayout>
