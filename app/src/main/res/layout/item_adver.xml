<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_corner"
    android:paddingBottom="10dp"
    android:paddingLeft="13dp"
    android:paddingRight="13dp"
    android:paddingTop="13dp">

    <RelativeLayout
        android:id="@+id/img_item_adver_avatar"
        android:layout_width="48dp"
        android:layout_height="48dp">
    <ImageView
        android:id="@+id/img_item_adver_avatar2"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_centerInParent="true"
        android:src="@mipmap/default_useravatar" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/img_item_adver_red_chat"
            android:layout_alignParentRight="true"
            android:src="@mipmap/red_circle"/>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_item_adver_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/img_item_adver_avatar"
        android:ellipsize="end"
        android:text="哈哈"
        android:textColor="@color/zy_text_color" />

    <TextView
        android:id="@+id/tv_item_adver_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_item_adver_avatar"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_toRightOf="@+id/img_item_adver_avatar"
        android:ellipsize="end"
        android:lines="1"
        android:text="heihei"
        android:textColor="@color/zy_text_black" />

    <TextView
        android:id="@+id/tv_iyem_adver_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:text="4月12日 12：30"
        android:textColor="@color/zy_text_gray"
        android:textSize="12sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/img_item_adver_avatar"
        android:layout_marginTop="15dp"
        android:background="#e1e1e1"
        android:paddingLeft="13dp"
        android:paddingRight="13dp" />

    <LinearLayout
        android:id="@+id/ll_item_adver_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_corner"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_adver_lingqu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/zy_orange" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/arrow_right" />
    </LinearLayout>

</RelativeLayout>
