<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/seltor"
        android:padding="@dimen/dimens_10">

        <ImageView
            android:id="@+id/goods_icon"
            android:layout_width="@dimen/dimens_54"
            android:layout_height="@dimen/dimens_54"
            android:src="@mipmap/nilong"
            android:visibility="gone" />


        <TextView
            android:id="@+id/goods_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_6"
            android:layout_toRightOf="@id/goods_icon"
            android:gravity="center_vertical"
            android:maxLength="18"
            android:maxLines="2"
            android:text="2016款打款尼龙风衣羽绒腹部身裹长习"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14"
            android:visibility="gone" />

        <TextView
            android:id="@+id/sell_per_income"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:padding="@dimen/dimens_4"
            android:text="￥40.00"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/sell_per_income"
            android:layout_marginRight="@dimen/dimens_10"
            android:text="X1"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="@dimen/dimens_14"
        android:background="@color/gray" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:padding="@dimen/dimens_10">

        <TextView
            android:id="@+id/sell_date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="创建时间：2016-11-20 20:06:30"
            android:textColor="@color/dim_gray"
            android:textSize="@dimen/text_12"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="状态:"
                android:textColor="@color/dim_gray"

                />

            <TextView
                android:id="@+id/tv_if_payed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已支付"
                android:textColor="@color/green" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>