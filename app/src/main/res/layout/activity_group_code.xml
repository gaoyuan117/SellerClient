<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_dark" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="330dp"
            android:layout_height="460dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginBottom="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_10"
            android:background="@drawable/yuanjiao_5">

            <TextView
                android:id="@+id/name_text"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:text="飞鹰UI设计"
                android:textColor="@color/dark"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:id="@+id/two_code"
                android:layout_width="@dimen/dimens_220"
                android:layout_height="@dimen/dimens_260"
                android:layout_below="@id/name_text"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimens_10"
                android:src="@mipmap/me_change" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/two_code"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dimens_10"
                android:text="扫一扫上面的二维码，加入群聊"
                android:textSize="@dimen/text_12" />


        </RelativeLayout>

    </ScrollView>

    <include
        layout="@layout/title_project"/>

</LinearLayout>