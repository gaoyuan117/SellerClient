<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <ImageView
            android:id="@+id/img_invited_info_avatar"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/default_image" />

        <TextView
            android:id="@+id/tv_invited_info_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img_invited_info_avatar"
            android:text="嘻嘻"
            android:textColor="@color/zy_text_gray"
            android:textSize="14sp" />


        <ImageView
            android:id="@+id/img_invite_info_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/img_chat_inviteinfo" />

        <Button
            android:id="@+id/btn_invite_complaint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/img_invite_info_chat"
            android:background="@mipmap/btn_invite_complaint"
            android:padding="2dp"
            android:text="投诉"
            android:textColor="@color/zy_text_blue" />

        <Button
            android:id="@+id/btn_invite_evaluate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/btn_invite_complaint"
            android:background="@mipmap/btn_invite_evaluate"
            android:padding="2dp"
            android:text="评价"
            android:textColor="@color/zy_orange" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@color/line" />
</LinearLayout>