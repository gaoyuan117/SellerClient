<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/me_address_nameaddress_height"

        >
        <TextView
            android:id="@+id/me_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王城"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:textSize="@dimen/text_14"
            android:layout_marginTop="10dp"

            android:textColor="@color/dark"
            />
        <TextView
            android:id="@+id/me_address_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_below="@+id/me_address_name"
            android:text="四川省成都市南明县"
            android:textColor="@color/deep_gray"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            />
        <ImageView
            android:id="@+id/personal_area_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/selected"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:visibility="gone"
            />
    </RelativeLayout>
</LinearLayout>