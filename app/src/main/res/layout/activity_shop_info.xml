<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/title_project" />

    <RelativeLayout
        android:id="@+id/head_icon_linear"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="@string/shop_head"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/shop_head_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

        <ImageView
            android:id="@+id/imgHead"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_head_arrow"
            android:scaleType="fitXY"
            android:src="@mipmap/default_useravatar" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/name_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:id="@+id/shop_name_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="@string/shop_name"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/shop_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_name_arrow"
            android:layout_toRightOf="@id/shop_name_label"
            android:background="@null"
            android:ellipsize="end"
            android:gravity="right"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/tv_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/shop_name_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/line" />


    <RelativeLayout
        android:id="@+id/twocode_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="店铺二维码"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/im_QrCode"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_twocode_arrow"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/shop_twocode_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/my_address_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="店铺地址"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/shop_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_address_arrow"
            android:background="@null"
            android:textColor="@color/tv_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/shop_address_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="#E8E8E8"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/sexy_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="店铺联系人"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/shop_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_sex_arrow"
            android:background="@null"
            android:textColor="@color/tv_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/shop_sex_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/area_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="营业时间"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/shop_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_area_arrow"
            android:background="@null"
            android:textColor="@color/tv_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/shop_area_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/line" />

    <RelativeLayout
        android:id="@+id/shop_sign_linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="配送等候时间"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/shop_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/shop_sign_arrow"
            android:background="@null"
            android:maxLength="20"
            android:textColor="@color/tv_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/shop_sign_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/me_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:background="#E8E8E8"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/layout_shop_sign_linear_tip"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/txt_shop_sign_linear_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:text="配送详情"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/shop_desc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/txt_shop_sign_linear_tip"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:textColor="@color/tv_text"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_13" />

    </RelativeLayout>

</LinearLayout>
