<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color_gray"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_16"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/me_name"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:background="@drawable/seltor"
        android:clickable="true">

        <ImageView
            android:id="@+id/me_head_icon"
            android:layout_width="@dimen/dimens_54"
            android:layout_height="@dimen/dimens_54"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/me_icon_marginparentleft"
            android:scaleType="fitXY"
            android:src="@mipmap/default_useravatar" />

        <TextView
            android:id="@+id/me_head_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="@dimen/dimens_20"
            android:layout_toRightOf="@+id/me_head_icon"
            android:text="@string/me_name"
            android:textColor="@color/dark"
            android:textSize="@dimen/me_head_name" />

        <TextView
            android:id="@+id/me_buyer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/me_head_icon"
            android:layout_marginBottom="@dimen/dimens_4"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_toRightOf="@+id/me_head_icon"
            android:text="账号："
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/me_buyer_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/me_head_icon"
            android:layout_marginBottom="@dimen/dimens_4"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/me_buyer_name"
            android:text="5478393"
            android:textColor="@color/dark_gray"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/me_head_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@mipmap/right_arrow" />

        <ImageView
            android:id="@+id/im_QrCode"
            android:layout_width="@dimen/dimens_20"
            android:layout_height="@dimen/dimens_20"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/me_head_right_arrow"
            android:src="@mipmap/change" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_16"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/me_relativelayout_album"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_album_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/me_album_part" />

        <TextView
            android:id="@+id/me_album_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/me_album"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/me_relativelayout_collection"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/me_colletion_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/me_collection" />

        <TextView
            android:id="@+id/me_colletion_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/me_collection"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_16"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/me_relativelayout_pocket"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_pocket_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/me_pocket_part" />

        <TextView
            android:id="@+id/me_pocket_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/me_pocket"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/me_relativelayout_face"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:visibility="gone"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_face_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/me_face" />

        <TextView
            android:id="@+id/me_face_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/me_face"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />
    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_16"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/me_relativelayout_about"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_about_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/me_about" />

        <TextView
            android:id="@+id/me_about_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/me_about"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_16"
        android:orientation="vertical" />

    <RelativeLayout
        android:id="@+id/me_relativelayout_settings"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/me_settings_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/me_settings" />

        <TextView
            android:id="@+id/me_settings_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/me_setting"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</LinearLayout>