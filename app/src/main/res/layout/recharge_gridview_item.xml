<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@mipmap/recharge">

        <LinearLayout
            android:id="@+id/recharge_price_linear_shang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_14">

            <TextView
                android:id="@+id/recharge_price_biaojia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30"
                android:textColor="#50b56a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sent_bag_yuan"
                android:textColor="#50b56a" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/recharge_price_linear_shang"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sell_price"
                android:textColor="#50b56a"
                android:textSize="@dimen/text_11" />

            <TextView
                android:id="@+id/recharge_price_shoujia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.00"
                android:textColor="#50b56a"
                android:textSize="@dimen/text_11" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/sent_bag_yuan"
                android:textColor="#50b56a"
                android:textSize="@dimen/text_11" />
        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>