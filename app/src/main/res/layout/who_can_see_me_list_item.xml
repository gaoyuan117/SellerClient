<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_60">

        <ImageView
            android:id="@+id/right_selected_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:src="@mipmap/selected"
            android:visibility="gone" />

        <TextView
            android:id="@+id/right_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_50"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="@string/add_bankcard_name"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/right_option_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/right_option"
            android:layout_marginLeft="@dimen/dimens_50"
            android:layout_marginTop="@dimen/dimens_6"
            android:text="所有人看"
            android:textColor="@color/light_gray"
            android:textSize="@dimen/text_13" />


    </RelativeLayout>
</LinearLayout>