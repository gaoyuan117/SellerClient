<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_300"
        android:background="@color/sent_redbag_background">

        <TextView
            android:id="@+id/received_redbag_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_20"
            android:layout_marginTop="@dimen/dimens_30"
            android:text="2016å¹´"
            android:textColor="@color/sent_redbag_time" />

        <ImageView
            android:id="@+id/received_redbag_head"
            android:layout_width="@dimen/dimens_60"
            android:layout_height="@dimen/dimens_60"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_50" />

        <RelativeLayout
            android:id="@+id/sent_redbag_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/received_redbag_head"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_20"
            android:orientation="horizontal">

            <TextView

                android:id="@+id/received_redbag_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/dark" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/received_redbag_name"
                android:layout_toRightOf="@id/received_redbag_name"
                android:text="@string/total_received_gongshoudao"
                android:textColor="@color/dark" />
        </RelativeLayout>

        <TextView
            android:id="@+id/received_redbag_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sent_redbag_linear"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimens_10"
            android:text="0.0"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_48" />

        <LinearLayout
            android:id="@+id/received_redbag_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/received_redbag_account"
            android:layout_marginLeft="@dimen/dimens_90"
            android:orientation="vertical">

            <TextView
                android:id="@+id/received_redbag_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/deep_gray"
                android:textSize="30sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/received_redbag_shoudaohongbao"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/received_redbag_account"
            android:layout_marginLeft="@dimen/dimens_100"
            android:layout_toRightOf="@+id/received_redbag_linear"
            android:orientation="vertical">

            <TextView
                android:id="@+id/received_redbag_shouqizuijia_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0"
                android:textColor="@color/deep_gray"
                android:textSize="30sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/received_redbag_shoujizuijia"
                android:textSize="12sp" />

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>