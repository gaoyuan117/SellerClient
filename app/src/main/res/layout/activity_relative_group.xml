<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1d2225"
    android:orientation="vertical">

    <include layout="@layout/title_project" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_number_1"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:textColor="@color/green"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/et_number_2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:textColor="@color/green"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/et_number_3"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:inputType="number"

            android:textColor="@color/green"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/et_number_4"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:textColor="@color/green"
            android:textSize="40sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="这些朋友也将进入群聊"
        android:textColor="#76787a" />


</LinearLayout>