<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:riv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.kaichaohulian.baocms.widget.RoundedImageView
        android:id="@+id/riv_redpacket_history"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
        android:layout_marginTop="15dp"
        riv:riv_corner_radius="40dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/riv_redpacket_history"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sent_redbag_bagtype"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent_bag_type"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/sent_redbag_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="08-09" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sent_redbag_item_youshang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_20"
        android:layout_marginTop="@dimen/dimens_10"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/sent_redbag_item_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.00"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/sent_redbag_item_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sent_bag_yuan" />

    </LinearLayout>

</RelativeLayout>