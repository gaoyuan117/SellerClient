<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/me_address_relative_add"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:orientation="horizontal"
        android:background="@drawable/seltor" >

        <ImageView
            android:id="@+id/add_address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/add_address" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/me_my_address_addaddress"
            android:textColor="@color/dark"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:layout_centerVertical="true"/>

        <ImageView
            android:id="@+id/discovery_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/right_arrow"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright" />

    </RelativeLayout>
</LinearLayout>