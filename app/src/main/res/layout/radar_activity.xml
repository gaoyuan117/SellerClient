<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.kaichaohulian.baocms.view.RadarView
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/head"
        android:layout_width="@dimen/dimens_60"
        android:layout_height="@dimen/dimens_60"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:text="退出"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/dimens_16"
        android:layout_marginTop="@dimen/dimens_16"
        android:padding="@dimen/dimens_6"
        android:background="@mipmap/radar_exit"/>

</FrameLayout>