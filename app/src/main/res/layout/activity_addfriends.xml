<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_48"
            android:background="@color/zy_orange">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:onClick="back"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="centerInside"
                android:src="@drawable/top_bar_back"/>

            <View
                android:visibility="gone"
                android:id="@+id/view_temp"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@id/iv_back"
                android:background="#14191A"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:text="添加朋友"
                android:textColor="#ffffff"
                android:textSize="18sp"/>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="#fff">

            <TextView
                android:id="@+id/tv_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="bottom"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/search"
                android:drawablePadding="8dp"
                android:layout_marginLeft="16dp"
                android:singleLine="true"
                android:text="手机号/ID号"
                android:textColor="#909090"
                android:textSize="14sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_below="@+id/tv_search"
                android:background="@color/zy_orange"/>


        </RelativeLayout>

        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/WeChatID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我的帐号：tingyi_tech"
                android:textColor="#888888"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/showCode"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:padding="10dp"
                android:src="@mipmap/a_5"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="vertical">


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#DBDBDB"/>


            <RelativeLayout
                android:id="@+id/Relative_code"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/iv_code"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/my_code"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_code"
                    android:text="我的二维码"
                    android:textColor="@color/zy_text_black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_code"
                    android:text="扫我的二维码加我好友"
                    android:textColor="#909090"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/Relative_LdAdd"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/iv_LdAdd"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_addfriends_ld"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_LdAdd"
                    android:text="雷达加朋友"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_LdAdd"
                    android:text="添加身边的朋友"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_alignParentBottom="true"
                android:background="@color/gray"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/Relative_mmGroup"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/iv_mmGroup"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_addfriends_mm"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_mmGroup"
                    android:text="面对面建群"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_mmGroup"
                    android:text="与身边的朋友进入同一个群聊"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#DBDBDB"/>

            <RelativeLayout
                android:id="@+id/scannerCode"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/iv_saoyisao"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/scan"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_saoyisao"
                    android:text="扫一扫"
                    android:textColor="@color/zy_text_black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_saoyisao"
                    android:text="扫面二维码图片"
                    android:textColor="@color/zy_text_gray"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#DBDBDB"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/phoneContact"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/iv_phoneContact"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_contactlist"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_phoneContact"
                    android:text="手机联系人"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_phoneContact"
                    android:text="添加通讯录中的朋友"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#DBDBDB"/>

            <RelativeLayout
                android:visibility="gone"
                android:id="@+id/shopping"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_list_item_bg"
                android:clickable="true"
                android:paddingBottom="14dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="14dp">

                <ImageView
                    android:id="@+id/iv_shopping"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/icon_contact_shop"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_shopping"
                    android:text="商家"
                    android:textColor="#353535"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:layout_toRightOf="@id/iv_shopping"
                    android:text="获取更多资讯和服务"
                    android:textColor="#BBBBBB"
                    android:textSize="12sp"/>
            </RelativeLayout>

            <View
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignParentBottom="true"
                android:background="#DBDBDB"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>