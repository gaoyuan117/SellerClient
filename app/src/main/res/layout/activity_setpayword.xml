<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_new_new_new"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kaichaohulian.baocms.activity.Setpayword">
    <include layout="@layout/title_project" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请设置您的支付密码"
    android:layout_margin="10dp"
    android:textColor="@color/zy_text_gray"
    />

    <com.kaichaohulian.baocms.view.PasswordEdittext
    android:id="@+id/sign_paypassword_edt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimens_10"
    android:layout_marginRight="@dimen/dimens_10"
    android:inputType="numberPassword"
    android:cursorVisible="false"
    android:maxLength="6"
    app:pivBorderRadius="1dp"
    app:pivBorderWidth="0.5px"
    app:pivPasswordColor="@color/black"
    app:pivPasswordLength="6"
    app:pivPasswordWidth="5dp"
    />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="请再次输入您的支付密码"
    android:layout_margin="10dp"
    android:textColor="@color/zy_text_gray"
    />

    <com.kaichaohulian.baocms.view.PasswordEdittext
    android:id="@+id/again_paypassword_edt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimens_10"
    android:layout_marginRight="@dimen/dimens_10"
    android:inputType="numberPassword"
    android:cursorVisible="false"
    android:maxLength="6"
    app:pivBorderRadius="1dp"
    app:pivBorderWidth="0.5px"
    app:pivPasswordColor="@color/black"
    app:pivPasswordLength="6"
    app:pivPasswordWidth="5dp"
    />

    <Button
    android:id="@+id/setpayword_cash_btn"
    android:layout_width="@dimen/withdraw_cash_yuanjiao_width"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center"
    android:layout_marginTop="50dp"
    android:background="@mipmap/deeporange_bar_normal"
    android:text="确定"
    android:textColor="@color/white"
    android:textSize="@dimen/text_14" />
</LinearLayout>
