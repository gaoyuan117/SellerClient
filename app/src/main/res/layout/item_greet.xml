<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#FFFFfF"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_item_greet_avatar"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="16dp"
        android:src="@mipmap/default_useravatar" />

    <TextView
        android:id="@+id/tv_item_greet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/img_item_greet_avatar"
        android:text="万事顺利"
        android:textColor="#000"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/tv_item_greet_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/img_item_greet_avatar"
        android:layout_marginBottom="3dp"
        android:layout_toRightOf="@+id/img_item_greet_avatar"
        android:text="向你打了声招呼"
        android:textSize="12sp" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_greet_added"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已添加"
            android:textColor="@color/zy_text_color"
            android:textSize="12sp" />

        <Button
            android:id="@+id/bt_greet_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/add_friends"
            android:text="接受"
            android:textColor="@color/zy_text_blue"
            android:textSize="12sp" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f5f5f5"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/img_item_greet_avatar"
        />


</RelativeLayout>