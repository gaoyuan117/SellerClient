<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50"
        android:layout_margin="@dimen/dimens_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_exit_signpassword"
            android:layout_width="@dimen/dimens_30"
            android:layout_height="@dimen/dimens_30"
            android:layout_centerVertical="true"
            android:padding="8dp"
            android:src="@mipmap/cancel_part" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_50"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="输入支付密码"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line" />

    <com.kaichaohulian.baocms.view.PasswordEdittext
        android:id="@+id/paypassword_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10"
        android:layout_marginRight="@dimen/dimens_10"
        android:layout_marginTop="@dimen/dimens_30"
        android:inputType="numberPassword"
        android:cursorVisible="false"
        android:maxLength="6"
        app:pivBorderColor="@color/light_gray"
        app:pivBorderRadius="1dp"
        app:pivBorderWidth="0.5px"
        app:pivPasswordColor="@color/black"
        app:pivPasswordLength="6"
        app:pivPasswordWidth="5dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50" />
</LinearLayout>