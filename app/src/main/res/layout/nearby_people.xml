<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical">

    <include layout="@layout/title_project"></include>

    <RelativeLayout
        android:id="@+id/nearby_people_linear_say_hi"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/yuanjiao_6"
        android:clickable="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:id="@+id/nearby_people_linear_img_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_6"
            android:background="@drawable/yuanjiao_5"
        />

        <TextView

            android:id="@+id/nearby_people_linear_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="50dp"

            android:text="@string/nearby_people_text_1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nearby_people_linear_text_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/nearby_people_linear_text1"
            android:text="1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/nearby_people_linear_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/nearby_people_linear_text_number"
            android:text="@string/nearby_people_text_2"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/discovery_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right_arrow" />
    </RelativeLayout>

    <ImageView
        android:layout_width="140dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dimens_20"
        android:src="@mipmap/discovery_nearby2" />

    <Button
        android:id="@+id/nearby_people_btn"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:background="@mipmap/deepgreen_bar"
        android:text="@string/nearby_people"
        android:textColor="@color/white" />

</LinearLayout>