<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/gray"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_buyer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/friends_icon"/>

        <TextView
            android:id="@+id/discovery_buyer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/discovery_friends"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <ImageView
            android:id="@+id/discovery_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_scan"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/scan_icon"/>

        <TextView
            android:id="@+id/discovery_scan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/discovery_scanning"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="#E8E8E8"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_shake"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discovery_shake_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/dicovery_shake"/>

        <TextView
            android:id="@+id/discovery_shake"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/discovery_shaking"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_bottle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discovery_bottle_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@drawable/bottle"/>

        <TextView
            android:id="@+id/discovery_bottle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="漂流瓶"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <ImageView
            android:id="@+id/discovery_bottle_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_nearby"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discovery_nearby_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/discovery_nearby"/>

        <TextView
            android:id="@+id/discovery_nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/discovery_nearby_buyer"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <TextView
            android:id="@+id/discovery_nearby_red_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/discovery_nearby"
            android:background="@mipmap/unread_count_bg"
            android:gravity="center"
            android:text="10"
            android:textColor="@color/white"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/discovery_nearby_feet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:src="@mipmap/selected"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/discovery_nearby_right_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="vertical"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_shopping"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discovery_shopping_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/discovery_shopping"/>

        <TextView
            android:id="@+id/discovery_shopping_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/discovery_shopping"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_small"
        android:layout_marginLeft="15dp"
        android:background="@color/light_gray"/>

    <RelativeLayout
        android:id="@+id/discovery_relative_business_in"
        android:layout_width="match_parent"
        android:layout_height="@dimen/discover_line_height"
        android:background="@drawable/seltor"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/discovery_business_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_icon_marginparentleft"
            android:src="@mipmap/icon_game"/>

        <TextView
            android:id="@+id/discovery_business_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/discover_text_marginparentleft"
            android:text="@string/discovery_business_in"
            android:textColor="@color/dark"
            android:textSize="@dimen/discover_text"/>

        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/discover_rightarrow_marginparentright"
            android:src="@mipmap/right_arrow"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"/>
</LinearLayout>
