<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">
    <RelativeLayout

        android:id="@+id/Relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_64"
        android:background="@drawable/seltor"
        android:padding="@dimen/dimens_8">

        <ImageView
            android:id="@+id/nearby_people_list_head_icon"
            android:layout_width="@dimen/dimens_54"
            android:layout_height="@dimen/dimens_54"
        />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dimens_10"
            android:layout_toRightOf="@id/nearby_people_list_head_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/nearby_people_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="@dimen/dimens_6"
                android:drawableRight="@mipmap/men"
                android:gravity="center_vertical"
                android:text="完事顺利"
                android:textColor="@color/dark"
                android:textSize="@dimen/text_14"/>
            <TextView
                android:id="@+id/nearby_people_list_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nearby_people_list_name"
                android:layout_marginTop="@dimen/dimens_8"
                android:layout_toRightOf="@+id/nearby_people_list_head_icon"
                android:text="400米以内"
                android:textColor="@color/dim_gray"
                android:textSize="@dimen/text_12"/>

        </LinearLayout>

        <TextView
            android:id="@+id/nearby_people_list_sign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dimens_10"
            android:layout_marginTop="@dimen/dimens_16"
            android:background="@drawable/yuanjiao_5"
            android:maxLines="2"
            android:maxWidth="@dimen/dimens_60"
            android:padding="@dimen/dimens_4"
            android:text="我知道我是一棵小草，但我要章程参天大树"
            android:textColor="@color/dark"
            android:textSize="@dimen/text_10"/>

    </RelativeLayout>
</LinearLayout>